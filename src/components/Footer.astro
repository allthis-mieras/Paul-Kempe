---
import CustomClock from "./CustomClock.astro";

const { title, showDate, timeZone = true } = Astro.props;

const year = new Date().getFullYear();
---

<footer class="container stretch">
  <div class="year"><p>{year} Â© {title}</p></div>
  <div class="timezone">
    <CustomClock timeZone={timeZone} showDate={showDate} />
  </div>
</footer>

<style lang="scss">
  footer {
    display: grid;
    grid-template-columns: 1fr 1fr;
    padding-block: var(--space-m);

    font-family: var(--font-family-mono);
    font-size: var(--fs--3);
    z-index: 1000;
    position: relative;
    background-color: var(--background);
    top: -0px;

    p {
      font-size: var(--fs--3);
      margin: 0; // Added missing value for margin
    }
    div {
      justify-self: center;
    }

    div:nth-child(1) {
      justify-self: start;
      text-align: center;
    }
    div:last-child {
      justify-self: end;
      text-align: right;
    }
  }

  a {
    color: #333;
  }

  @media (max-width: 768px) {
    footer {
      grid-template-columns: 1fr 1fr;
      div {
        justify-self: center;
      }

      & .timezone {
        justify-self: center;
        order: 1;
      }
      & .year {
      }
    }
  }
</style>
